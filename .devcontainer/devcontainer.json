{
  "name": "C Development Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/gcc:1": {},
    "ghcr.io/devcontainers/features/valgrind:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.inlineSuggest.enabled": false,
        "editor.quickSuggestions": { "other": false, "comments": false, "strings": false },
        "editor.parameterHints.enabled": false,
        "editor.hover.enabled": false,
        "editor.suggestOnTriggerCharacters": false,
        "editor.wordBasedSuggestions": false,
        "editor.snippetSuggestions": "none",
        "editor.acceptSuggestionOnEnter": "off",
        "extensions.ignoreRecommendations": true,
        "github.copilot.enable": false,
        "github.copilot.editor.enable": false,
        "github.copilot.inlineSuggest.enable": false
      }
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y cppcheck valgrind"
}
